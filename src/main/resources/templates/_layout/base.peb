<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{% block title %}COMP2850 Task Manager{% endblock %}</title>
  
  {# Pico CSS for baseline accessible styles (WCAG 2.2 AA compliant) #}
  <link rel="stylesheet" href="https://unpkg.com/@picocss/pico@2/css/pico.min.css">
  
  {# HTMX for progressive enhancement #}
  <script src="https://unpkg.com/htmx.org@1.9.12"></script>
  
  <style>

    body {
      overflow-x: hidden;
      background-color: white;
    }


    header {
      padding: 30px;
    }

    /* Visually hidden but accessible to screen readers (WCAG 1.3.1) */
    .visually-hidden {
      position: absolute !important;
      height: 1px;
      width: 1px;
      overflow: hidden;
      clip: rect(1px, 1px, 1px, 1px);
      white-space: nowrap;
    }
    
    /* Skip link for keyboard navigation (WCAG 2.4.1) */
    .skip-link {
      position: absolute;
      left: -10000px;
      width: 1px;
      height: 1px;
      overflow: hidden;
    }
    .skip-link:focus {
      position: static;
      width: auto;
      height: auto;
      background: #1976d2;
      color: white;
      padding: 0.5rem 1rem;
      text-decoration: none;
      font-weight: bold;
      z-index: 9999;
    }
    
    /* Pagination styles */
    .pagination {
      display: flex;
      gap: 0.5rem;
      align-items: center;
    }

    /* Override Pico.css button color for WCAG 1.4.3 AA compliance */
    button[type="submit"],
    button {
      color: black !important; /* White text on blue background for better contrast */
      background-color: white !important;
      border: 0;
      border-radius: 50px;
      box-shadow: rgba(14, 30, 37, 0.06) 0px 2px 4px 0px, rgba(14, 30, 37, 0.16) 0px 2px 16px 0px;
    }

    #edit-button {
      background-color: white !important;
      color: black !important;
      border: 0;
      box-shadow: rgba(14, 30, 37, 0.06) 0px 2px 4px 0px, rgba(14, 30, 37, 0.16) 0px 2px 16px 0px;
      border-radius: 50px;
      width: 70%;
      flex: 1;
      margin: 10px;
      transition: background-color 0.25s ease;
    }

    #delete-button {
      background-color: #cc0000 !important;
      color: white !important;
      border: 0;
      box-shadow: rgba(14, 30, 37, 0.12) 0px 2px 4px 0px, rgba(14, 30, 37, 0.32) 0px 2px 16px 0px;
      border-radius: 50px;
      width: 20%;
      flex: 1;
      margin: 10px;
      transition: background-color 0.25s ease;
    }

    #delete-button:hover {
      background-color: #8a0000 !important;
    }

    #edit-button:hover {
      background-color: #f2f2f2 !important;
    }

    .task-view {
      display: flex;
      flex-direction: column;
    }

    #dyslexia-filter {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: #FFF5B1;
      opacity: 0.4;
      pointer-events: none;
      z-index: 999999;
      display: none;
    }

    #dyslexia-button {
      position: fixed;
      bottom: 20px;
      left: 20px;
      padding: 10px 20px;
      background-color: white;
      color: white;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      z-index: 1000;
      transition: background-color 0.2s ease;
    }

    #dyslexia-button:hover {
      background-color: #f2f2f2 !important;
    }


  </style>
</head>
<body>
  <div id="dyslexia-filter"></div>
  <button id="dyslexia-button">Dyslexia Filter</button>

  {# Include header with navigation and accessibility features #}
  {% include "_layout/_header.peb" %}
  
  {# Main landmark for screen readers (WCAG 1.3.1) #}
  {# tabindex="-1" allows programmatic focus for skip link #}
  <main id="main" class="container" tabindex="-1">
    {% block content %}
    {# Page-specific content goes here #}
    {% endblock %}
  </main>
  
  {# Include footer with helpful links and session info #}
  {% include "_layout/_footer.peb" %}

  <script>
  const button = document.getElementById('dyslexia-button');
  const filter = document.getElementById('dyslexia-filter');

  button.addEventListener('click', () => {
    // Toggle the dyslexia filter
    if (filter.style.display === 'none' || filter.style.display === '') {
      filter.style.display = 'block';
    } else {
      filter.style.display = 'none';
    }
  });
  </script>

</body>
</html>
